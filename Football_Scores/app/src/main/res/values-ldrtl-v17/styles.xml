<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- define ui style for rtl check -->


    <style name="AppTheme.Mirror.LayoutDirection">
        <item name="android:layoutDirection">rtl</item>
    </style>

    <style name="AppTheme.Mirror.LayoutDirection.AlignParentLeft">
        <item name="android:layout_alignParentStart">true</item>
    </style>

    <style name="AppTheme.Mirror.LayoutDirection.AlignParentRight">
        <item name="android:layout_alignParentEnd">true</item>
    </style>


    <style name="AppTheme.Mirror.TextDirection">
        <item name="android:textDirection">rtl</item>
    </style>

    <style name="AppTheme.Mirror.ShareButton" parent="AppTheme.Mirror.TextDirection">
        <item name="android:drawableStart">@android:drawable/ic_menu_share</item>
    </style>

    <!-- AppWidget Style -->
    <style name="AppTheme.AppWidget.Text">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textDirection">locale</item>
    </style>


    <style name="AppTheme.AppWidget.Text.LeftText">
        <item name="android:layout_alignParentStart">true</item>
    </style>

    <style name="AppTheme.AppWidget.Text.RightText">
        <item name="android:layout_alignParentEnd">true</item>
    </style>

</resources>
