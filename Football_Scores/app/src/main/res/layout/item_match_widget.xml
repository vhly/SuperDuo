<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/item_match_widget_container"
                android:background="@drawable/shape_widget_item_bg"
>

    <TextView
            android:id="@+id/item_match_widget_home_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/AppTheme.AppWidget.Text.LeftText"
    />

    <TextView
            android:id="@+id/item_match_widget_away_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/AppTheme.AppWidget.Text.RightText"
    />

    <TextView
            android:id="@+id/item_match_widget_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/match_no_start"
            style="@style/AppTheme.AppWidget.Text"
    />


</RelativeLayout>